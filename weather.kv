#:import Gradient kivy_gradient.Gradient
#:import get_color_from_hex kivy.utils.get_color_from_hex

<Loading>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: (0, 0, 1)
            origin: self.center
    canvas.after:
        PopMatrix


<SearchScreen>
    BoxLayout:
        orientation: "vertical"
        padding: 30
        width: root.width
        height: root.height

        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                texture: Gradient.vertical(get_color_from_hex(app.bg_start), get_color_from_hex(app.bg_end))
        BoxLayout:
            width: root.width
            orientation: 'vertical'
            height: root.height
            BoxLayout:
                size_hint: None, None
                height: 40
                width: root.width - 60
                orientation: "horizontal"
                halign: "right"
                spacing: 10
                Widget
                Button:
                    id: menu_button
                    background_color: (0, 0, 0, 0)
                    size_hint: None, None
                    size: 40, 40
                    Image:
                        source: "images/navigation/menu.png"
                        size_hint: None, None
                        size: 40, 40
                        x: self.parent.x
                        y: self.parent.y
                Button:
                    id: close_button
                    background_color: (0, 0, 0, 0)
                    size_hint: None, None
                    size: 40, 40
                    on_press: app.stop()

                    Image:
                        source: "images/navigation/close.png"
                        size_hint: None, None
                        size: 40, 40
                        x: self.parent.x
                        y: self.parent.y


            AnchorLayout:
                padding: 0, 0, 0, 30
                anchor_x: "center"
                anchor_y: "center"
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    width: 400
                    orientation: "vertical"
                    Label:
                        text: "Enter Location:"
                        font_size: 40

                    BoxLayout:
                        spacing: 10
                        size_hint: None, None
                        width: 400
                        TextInput:
                            id: city_input
                            size_hint: None, None
                            font_size: 48
                            width: 350
                            height: 70
                            multiline: False
                            background_normal: "white.png"
                            background_active: "white.png"

                            foreground_color: get_color_from_hex(app.bg_start)
                            cursor_color: get_color_from_hex(app.bg_start)


                        Button:
                            id: close_button
                            background_color: (0, 0, 0, 0)
                            size_hint: None, None
                            size: 40, 40
                            on_press: root.load_city()

                            Image:
                                source: "images/navigation/search.png"
                                size_hint: None, None
                                size: 70, 70
                                x: self.parent.x
                                y: self.parent.y

<LoadingScreen>
    AnchorLayout:
        width: root.width
        height: root.height
        padding: 30

        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                texture: Gradient.vertical(get_color_from_hex(app.bg_start), get_color_from_hex(app.bg_end))

        Loading:
            id: spinner
            source: "images/navigation/spinner.png"
            size_hint: None, None
            size: 200, 200

            anchor_x: "center"
            anchor_y: "center"

<StatusScreen>
    BoxLayout:
        width: root.width
        height: root.height
        orientation: "vertical"
        padding: 30
        id: background_gradient
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                texture: Gradient.vertical(get_color_from_hex(app.bg_start), get_color_from_hex(app.bg_end))

        GridLayout:
            id: status_grid
            cols:2
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    Label:
                        id: city_name
                        text: "City name"
                        font_size: 60
                        size_hint_y: None
                        height: "60dp"
                        text_size: self.width, None
                        halign: "left"

                    Label:
                        id: city_day
                        text: "Monday"
                        font_size: 48
                        size_hint_y: None
                        height: "48dp"
                        text_size: self.width, None
                        halign: "left"


                    Label:
                        id: city_time
                        text: "5:40"
                        font_size: 60
                        size_hint_y: None
                        height: "60dp"
                        text_size: self.width, None
                        halign: "left"
                    Widget:

                BoxLayout:
                    id: forecast_layout
                    orientation: "horizontal"
                    spacing: 0

                    BoxLayout:
                        orientation: "vertical"
                        spacing: 10
                        size_hint: None, None

                        Label:
                            id: forecast_day_1
                            text: "Thu"
                            font_size: 48
                            size_hint_y: None
                            height: "48dp"
                            text_size: self.width, None
                            halign: "left"

                        Label:
                            id: forecast_temp_1
                            text: "25°"
                            font_size: 32
                            size_hint_y: None
                            height: "32dp"
                            text_size: self.width, None
                            halign: "left"

                    BoxLayout:
                        orientation: "vertical"
                        spacing: 10
                        size_hint: None, None

                        Label:
                            id: forecast_day_2
                            text: "Thu"
                            font_size: 48
                            size_hint_y: None
                            height: "48dp"
                            text_size: self.width, None
                            halign: "left"

                        Label:
                            id: forecast_temp_2
                            text: "25°"
                            font_size: 32
                            size_hint_y: None
                            height: "32dp"
                            text_size: self.width, None
                            halign: "left"

                    BoxLayout:
                        orientation: "vertical"
                        spacing: 10
                        size_hint: None, None

                        Label:
                            id: forecast_day_3
                            text: "Thu"
                            font_size: 48
                            size_hint_y: None
                            height: "48dp"
                            text_size: self.width, None
                            halign: "left"

                        Label:
                            id: forecast_temp_3
                            text: "25°"
                            font_size: 32
                            size_hint_y: None
                            height: "32dp"
                            text_size: self.width, None
                            halign: "left"

                    BoxLayout:
                        orientation: "vertical"
                        spacing: 10
                        size_hint: None, None

                        Label:
                            id: forecast_day_4
                            text: "Thu"
                            font_size: 48
                            size_hint_y: None
                            height: "48dp"
                            text_size: self.width, None
                            halign: "left"

                        Label:
                            id: forecast_temp_4
                            text: "25°"
                            font_size: 32
                            size_hint_y: None
                            height: "32dp"
                            text_size: self.width, None
                            halign: "left"

            BoxLayout:
                orientation: "vertical"
                spacing: 10
                BoxLayout:
                    spacing: 10
                    size_hint: 1, None
                    orientation: "horizontal"
                    height: 40
                    Widget
                    Button:
                        id: back_button
                        background_color: (0, 0, 0, 0)
                        size_hint: None, None
                        size: 40, 40
                        on_press:
                            root.manager.transition.direction = "left"
                            root.manager.current = "search"
                        Image:
                            source: "images/navigation/back.png"
                            size_hint: None, None
                            size: 40, 40
                            x: self.parent.x
                            y: self.parent.y
                    Button:
                        id: refresh_button
                        background_color: (0, 0, 0, 0)
                        size_hint: None, None
                        size: 40, 40
                        on_press: root.refresh_weather()
                        Loading:
                            id: refresh_button_image
                            source: "images/navigation/refresh.png"
                            size_hint: None, None
                            size: 40, 40
                            x: self.parent.x
                            y: self.parent.y
                    Button:
                        id: menu_button
                        background_color: (0, 0, 0, 0)
                        size_hint: None, None
                        size: 40, 40
                        Image:
                            source: "images/navigation/menu.png"
                            size_hint: None, None
                            size: 40, 40
                            x: self.parent.x
                            y: self.parent.y
                    Button:
                        id: close_button
                        background_color: (0, 0, 0, 0)
                        size_hint: None, None
                        size: 40, 40
                        on_press: app.stop()

                        Image:
                            source: "images/navigation/close.png"
                            size_hint: None, None
                            size: 40, 40
                            x: self.parent.x
                            y: self.parent.y

                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    padding: 0, 5, 0, 0
                    Label:
                        id: weather_status
                        text: "Status"
                        font_size: 48
                        size_hint_y: None
                        height: "48dp"
                        text_size: self.width, None
                        halign: "right"
                    Label:
                        id: weather_temp
                        text: "25°"
                        font_size: 60
                        size_hint_y: None
                        height: "60dp"
                        text_size: self.width, None
                        halign: "right"

                    AnchorLayout:
                        anchor_x: "right"
                        anchor_y: "top"
                        AsyncImage:
                            id: weather_image
                            source: "images/sunny.png"
                            size_hint: None, None
                            size: 300, 300

                    Widget:
