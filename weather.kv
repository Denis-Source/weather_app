#:import Gradient kivy_gradient.Gradient
#:import get_color_from_hex kivy.utils.get_color_from_hex

<Loading>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: (0, 0, 1)
            origin: self.center
    canvas.after:
        PopMatrix

<GradientBackground>:
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: Gradient.vertical(get_color_from_hex(app.bg_start), get_color_from_hex(app.bg_end))
